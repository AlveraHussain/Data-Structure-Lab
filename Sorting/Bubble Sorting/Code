#include <iostream>
#include <fstream>
#include <sstream>
#include <chrono>
#include <algorithm>
#include <string>
using namespace std;

int main()
{
    ifstream fin("numbers.txt");
    if (!fin) 
    {
        cout << "Error opening file." << endl;
        return 1;
    }

    string line, token;
    getline(fin, line);
    fin.close();

    int count = 1;
    for (char c : line) 
    {
        if (c == ',') 
        {
            count++;
        }
    }

    cout << "Count of numbers: " << count << endl;

    int *numbers = new int[count];
    int index = 0;

    stringstream ss(line);
    while (getline(ss, token, ',')) 
    {
        numbers[index++] = stoi(token);
    }

    auto start = chrono::high_resolution_clock::now();
    sort(numbers, numbers + count);
    auto stop = chrono::high_resolution_clock::now();
    
    auto duration_us = chrono::duration_cast<chrono::microseconds>(stop - start);
    auto duration_ms = chrono::duration_cast<chrono::milliseconds>(stop - start);
    auto duration_s  = chrono::duration_cast<chrono::seconds>(stop - start);

    cout << "Array Sorted in " 
         << duration_s.count() << " seconds, "
         << (duration_ms.count() % 1000) << " milliseconds, "
         << (duration_us.count() % 1000) << " microseconds" << endl;


    cout << "Sorted Array: ";
    for (int i = 0; i < count; i++)
    {
        cout << numbers[i];
        if (i < count - 1)
            cout << ", ";
    }
    cout << endl;

    ofstream fout("numbers.txt");
    
    fout.close();

    delete[] numbers;
    return 0;
}
